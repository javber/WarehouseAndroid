<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/presents_main_buttonNewRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0.28"
        android:background="@android:color/holo_green_dark"
        android:text="New Register"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/presents_main_buttonConsult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/presents_main_buttonNewRegister"
        android:layout_margin="10dp"
        android:layout_marginTop="51dp"
        android:layout_weight="0.26"
        android:background="@android:color/holo_orange_dark"
        android:text="Consult"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/presents_main_buttonConfiguration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/presents_main_buttonConsult"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/presents_main_buttonConsult"
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        android:layout_weight="0.27"
        android:background="@android:color/darker_gray"
        android:text="Configuration"
        android:textColor="@android:color/black" />
    
</LinearLayout>
